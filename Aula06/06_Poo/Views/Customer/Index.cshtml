@model List<PooModel.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="text-center mb-4">
    <h1 class="display-5">Customer List</h1>
</div>
<hr>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Customer" class="btn btn-light">
        New Customer
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        There are no customer records.
    </div>
}

<div class="mb-3">
    <a asp-action="ExportDelimitatedCustumer" asp-controller="Customer" class="btn btn-primary">
        Export to txt File
    </a>
</div>
