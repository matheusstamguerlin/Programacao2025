<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recursive App</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <a class="navbar-brand" href="/">Recursive App</a>
            <div class="ml-auto">
                <a href="https://github.com/KalilMassignaniDaRosa/Data-Structure-24" target="_blank"
                   class="btn"
                   style="background-color: #fff; border: none;">
                    <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png"
                         alt="GitHub" style="height: 24px;">
                </a>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1 container mt-4">
        @RenderBody()
    </main>

    <footer class="footer bg-light py-3 mt-auto">
        <div class="container text-center">
            <span class="text-muted">© 2025 Recursive App. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
