@model CheckBookModelEn

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center">Number to Words Converter</h4>
                    <form method="post">
                        <div class="mb-3">
                            <label for="number" class="form-label">Insert a number:</label>
                            <input class="form-control" type="number" id="number" name="number" required min="0" max="1000000" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.NumberInWords))
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="alert alert-info text-center">
                    <h5 class="mb-3">Your number in words:</h5>
                    <p class="h6 mb-0">@Model.NumberInWords</p>
                </div>
            </div>
        </div>
    }
</div>

