@model List<PooModel.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="text-center mb-4">
    <h1 class="display-5">
        <i class="fa-solid fa-boxes-stacked me-2 text-primary"></i> Product List
    </h1>
</div>
<hr>
<div class="mb-3">
    <a asp-action="Create" asp-controller="Product" class="btn btn-success">
        <i class="fa-solid fa-box-open me-1"></i> New Product
    </a>
</div>


@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th style="width: 8%;">Id</th>
                    <th class="text-start">Name</th>
                    <th class="text-start">Description</th>
                    <th style="width: 10%;">Price</th>
                    <th style="width: 10%;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td class="text-start">@product.Name</td>
                        <td class="text-start">@product.Description</td>
                        <td class="text-center">@product.CurrentPrice.ToString("C")</td>
                        <td class="text-center">
                            <a asp-action="Delete" asp-controller="Product"
                               asp-route-id="@product.Id"
                               title="Delete Product @product.Name"
                               class="btn btn-sm btn-outline-danger p-2">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        There are no product records.
    </div>
}



<div class="mb-4 mt-3">
    <a asp-action="ExportDelimitatedProduct" asp-controller="Product" class="btn btn-primary me-2">
        <i class="fa-solid fa-file-export me-1"></i> Export Delimitated
    </a>
    <a asp-action="ExportFixedProduct" asp-controller="Product" class="btn btn-primary">
        <i class="fa-solid fa-file-export me-1"></i> Export Fixed
    </a>
</div>
