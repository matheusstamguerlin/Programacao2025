@model PooModel.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-box-open me-2"></i> Create Product
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Product" method="post" id="formProduct" novalidate>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter product description" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentPrice" class="form-label fw-semibold">Current Price</label>
                            <input asp-for="CurrentPrice" class="form-control" placeholder="Enter current price" type="number" step="0.01" min="0" required />
                            <span asp-validation-for="CurrentPrice" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-danger me-2">
                                <i class="fa-solid fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-check me-1"></i> Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

