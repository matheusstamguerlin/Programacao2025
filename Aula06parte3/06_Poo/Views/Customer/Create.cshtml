@model PooModel.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-user-plus me-2"></i> Create Customer
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Customer" method="post" id="formCustomer" novalidate>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter customer name" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-controller="Customer" class="btn btn-outline-danger me-2">
                                <i class="fa-solid fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-check me-1"></i> Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>