@model List<PooModel.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="text-center mb-4">
    <h1 class="display-5">Customer List</h1>
</div>
<hr>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Customer" class="btn btn-light">
        New Customer
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td class ="text-center">@customer.Id</td>
                    <td>@customer.Name</td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-controller="Customer" 
                        asp-route-id="@customer.Id" title="Delete Customer @customer.Name">
                            <i class="fa-solid fa-trash align-items-center"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        There are no customer records.
    </div>
}

<div class="mb-3">
    <a asp-action="ExportDelimitatedCustomer" asp-controller="Customer" class="btn btn-primary">
        Export Delimitated
    </a>
    <a asp-action="ExportFixedCustomer" asp-controller="Customer" class="btn btn-primary">
        Export Fixed
    </a>
</div>
