@model List<PooModel.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="text-center mb-4">
    <h1 class="display-5">Product List</h1>
</div>
<hr>


<div class="mb-3">
    <a asp-action="Create" asp-controller="Product" class="btn btn-light">
        New Product
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Current Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <!-- C para formatar como moeda-->
                    <td>@product.CurrentPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        There are no product records.
    </div>
}

<div class="mb-3">
    <a asp-action="ExportDelimitatedProduct" asp-controller="Product" class="btn btn-primary">
        Export to txt File
    </a>
</div>